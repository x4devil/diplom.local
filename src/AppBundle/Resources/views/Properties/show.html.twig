{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Properties</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Idproperties</th>
                <td>{{ entity.idProperties }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('properties') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('properties_edit', { 'id': entity.idProperties }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
