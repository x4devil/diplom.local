{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phonenumber</th>
                <th>Login</th>
                <th>Password</th>
                <th>Roles</th>
                <th>Iduser</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.idUser }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.phoneNumber }}</td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.roles }}</td>
                <td>{{ entity.idUser }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.idUser }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.idUser }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
